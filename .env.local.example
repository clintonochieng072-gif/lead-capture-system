# Supabase (public) - safe to expose on client
# Replace these with your project's public values for local development.
NEXT_PUBLIC_SUPABASE_URL=YOUR_NEXT_PUBLIC_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_NEXT_PUBLIC_SUPABASE_ANON_KEY_HERE

# Supabase (server) - NEVER commit real value; server-only
# This should be set in your .env.local (and your host's protected env vars).
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE

# Paystack (server) - NEVER commit real value; server-only
# Use sk_test_xxx for sandbox/testing or sk_live_xxx for production
PAYSTACK_SECRET_KEY=YOUR_PAYSTACK_SECRET_KEY_HERE

# Affiliate System Integration (server) - NEVER commit real values
# URL of the affiliate system API endpoint for commission notifications
AFFILIATE_API_URL=https://affiliate.clintonstack.com/api/award-commission
# Secret token for authenticating requests to the affiliate system
AFFILIATE_API_SECRET=YOUR_AFFILIATE_API_SECRET_HERE

# Cron Job Security (optional) - NEVER commit real value
# Secret for securing cron endpoints (e.g., retry-commissions)
# If not set, cron endpoints are accessible without authentication (dev only)
CRON_SECRET=YOUR_CRON_SECRET_HERE

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

